body { margin: 0; padding: 0;}

body, p, ol, ul, td {
  font-family: verdana, arial, helvetica, sans-serif;
  font-size:   13px;
  line-height: 18px;
}

#banner {
	margin: 0;
	padding: 1em;
	font-size: 18pt;
	background: #000;
	color: #fff;
}

body * {
	margin: 0;
	padding: 0;
}

tr.summary td {
	cursor: pointer;
	padding-left: 0.2em;
	padding-right: 0.2em;
}

#deliveries
{
	width: 100%;
	padding: 1em;
	border-collapse: collapse;
	border-bottom: solid 1px black;
}

#deliveries th {
	text-align: left;
	font-size: 12pt;
	border-bottom: solid 1px black;
}

#deliveries td {
	font-size: 9pt;
}

br.clear {
	clear: both;
}

.delivery .details {
  display: none;
}

ul.delivery_operations {
	font-size: smaller;
}

ul.delivery_operations li {
	display: inline;
	float: left;
	margin-left: 1.0em;
}

tbody.delivery {
	border-bottom: solid 1px #888;
}

tbody.new {
	font-weight: bolder;
}

div.delivery_body {
	padding-left: 2em;
	margin-left: 1em;
	border-left: solid 2px #888;
}

#from_header {
	width: 15%;
}

#to_header {
	width: 30%;
}

#sent_header {
	width: 13%;
}

#subject_header {
	width: 42%;
}

